<div class="text-center">
    <h1 class="display-4">Add a Wedding</h1>
    @model Wedding
    <form asp-action="CreateWedding" method="POST" class="d-flex flex-column align-items-center">
        <input type="hidden" asp-for="CreatorId" value=@ViewBag.UUID />
        <label asp-for="WeddingOne"></label>
        <span class="text-danger" asp-validation-for="WeddingOne" class="text-danger"></span>
        <input type="text" asp-for="WeddingOne"/>
        <label asp-for="WeddingTwo"></label>
        <span class="text-danger" asp-validation-for="WeddingTwo" class="text-danger"></span>
        <input type="text" asp-for="WeddingTwo"/>
        <label asp-for="Date"></label>
        <span class="text-danger" asp-validation-for="Date" class="text-danger"></span>
        <input type="date" asp-for="Date"/>
        <button type="submit" class="btn btn-outline-primary">Add Wedding</button>
    </form>
</div>